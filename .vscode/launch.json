    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MirDB Parser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_handler/envir.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/data_handler",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--db_path", "${input:dbPath}",
                "--output", "${input:outputDir}",
                "--option", "${input:optionType}"
            ],
            "justMyCode": false
        },
    ],
    "inputs": [
        {
            "id": "dbPath",
            "type": "promptString",
            "description": "请输入数据库路径",
            "default": "../Jev/Server.MirDB.bak"
        },
        {
            "id": "outputDir",
            "type": "promptString",
            "description": "请输入输出目录",
            "default": "data"
        },
        {
            "id": "optionType",
            "type": "pickString",
            "description": "请选择操作类型",
            "options": ["load", "save"],
            "default": "load"
        }
    ]
}