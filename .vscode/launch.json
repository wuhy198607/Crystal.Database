{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug MirDB Parser",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/data_handler/envir.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/data_handler",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--source1", "${input:source1Path}",
                "--source2", "${input:source2Path}",
                "--option", "${input:optionType}",
                "--source1_type", "${input:source1Type}",
                "--source2_type", "${input:source2Type}"
            ],
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "source1Path",
            "type": "promptString",
            "description": "请输入第一个数据源路径",
            "default": "../Jev/Server.MirDB.bak"
        },
        {
            "id": "source2Path",
            "type": "promptString",
            "description": "请输入第二个数据源路径",
            "default": "data"
        },
        {
            "id": "optionType",
            "type": "pickString",
            "description": "请选择操作类型",
            "options": ["load", "save", "compare"],
            "default": "compare"
        },
        {
            "id": "source1Type",
            "type": "pickString",
            "description": "请选择第一个数据源类型",
            "options": ["db", "json"],
            "default": "db"
        },
        {
            "id": "source2Type",
            "type": "pickString",
            "description": "请选择第二个数据源类型",
            "options": ["db", "json"],
            "default": "json"
        }
    ]
} 